# Cross-compile per Windows da Linux
CC = x86_64-w64-mingw32-gcc
CFLAGS = -Wall -Wextra -Wpedantic -Wshadow -std=c11 -g -I./src
SRC = $(wildcard src/*.c)
OBJDIR = build
# Genera object files con suffisso _windows.o
OBJ = $(SRC:src/%.c=$(OBJDIR)/%_windows.o)
TARGET = bin/zasm.exe

all: $(TARGET)

$(TARGET): $(OBJ)
	@mkdir -p bin
	$(CC) $(CFLAGS) $^ -o $@

# Regola per compilare ciascun .c in .o nella directory build/ con suffisso _windows
$(OBJDIR)/%_windows.o: src/%.c
	@mkdir -p $(OBJDIR)
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	rm -rf $(OBJDIR) $(TARGET)
